<Page
    x:Class="Cyber_Vault.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer x:Name="ContentArea">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <PasswordBox Header="Enter your Master Key:" PlaceholderText="Master Key" Width="300" Margin="0 0 0 20"/>
                <Button Style="{StaticResource AccentButtonStyle}" Content="Continue" Click="Button_Click" HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
