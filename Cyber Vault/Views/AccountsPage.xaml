                        <!-- Password Container -->
                        <StackPanel x:Name="Password_Container" Orientation="Vertical" Margin="0,10,0,0">
                            
                            <!-- Password Header -->
                            <TextBlock Text="Password"
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                       FontSize="17"
                                       Margin="20,0,0,0"
                            />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Password TextBlock -->
                                <TextBlock x:Name="Password_Text_Hidden" Text="pass123$" Visibility="Collapsed"/>
                                <RichTextBlock x:Name="Password_TextBlock" 
                                       Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="20,15,0,0"
                                       Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="Password_Text" Text="●●●●●●●●●●"/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!-- Hide/Unhide Password Button -->
                                <CheckBox x:Name="TogglePassword_CheckBox" IsChecked="False" Visibility="Collapsed"/>
                                <Button x:Name="TogglePassword_Button"
                                        Grid.Column="1" 
                                        Margin="0,0,5,0" 
                                        VerticalAlignment="Bottom" 
                                        Width="45"
                                        Height="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="TogglePassword_Button_Click"
                                        ToolTipService.ToolTip="Show Password"
                                        ToolTipService.Placement="Top">
                                    <FontIcon x:Name="PasswordToggle_Icon" Glyph="&#xE7B3;" FontSize="17"/>
                                </Button>

                                <!-- Copy Password Button -->
                                <Button x:Name="CopyPassword_Button"
                                        Grid.Column="2" 
                                        Margin="0,0,20,0" 
                                        VerticalAlignment="Bottom" 
                                        Width="45"
                                        Height="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="CopyPassword_Button_Click"
                                        ToolTipService.ToolTip="Copy Password"
                                        ToolTipService.Placement="Top">
                                    <FontIcon Glyph="&#xE8C8;" FontSize="17"/>
                                </Button>
                            </Grid>
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>

                        </StackPanel>
                        

                        <!-- Pin Container -->
                        <StackPanel x:Name="Pin_Container" Orientation="Vertical" Margin="0,10,0,0">

                            <!-- Pin Header -->
                            <TextBlock Text="Pin"
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                       FontSize="17"
                                       Margin="20,0,0,0"
                            />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Pin TextBlock -->
                                <TextBlock x:Name="Pin_Text_Hidden" Text="03230" Visibility="Collapsed"/>
                                <RichTextBlock x:Name="Pin_TextBlock" 
                                       Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="20,15,0,0"
                                       Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="Pin_Text" Text="●●●●●●"/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!-- Hide/Unhide Pin Button -->
                                <CheckBox x:Name="TogglePin_CheckBox" IsChecked="False" Visibility="Collapsed"/>
                                <Button x:Name="TogglePin_Button"
                                        Grid.Column="1" 
                                        Margin="0,0,5,0" 
                                        VerticalAlignment="Bottom" 
                                        Width="45"
                                        Height="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="TogglePin_Button_Click"
                                        ToolTipService.ToolTip="Show Pin"
                                        ToolTipService.Placement="Top">
                                    <FontIcon x:Name="PinToggle_Icon" Glyph="&#xE7B3;" FontSize="17"/>
                                </Button>

                                <!-- Copy Pin Button -->
                                <Button x:Name="CopyPin_Button"
                                    Grid.Column="2" 
                                    Margin="0,0,20,0" 
                                    VerticalAlignment="Bottom" 
                                    Width="45"
                                    Height="35"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CopyPin_Button_Click"
                                    ToolTipService.ToolTip="Copy Pin"
                                    ToolTipService.Placement="Top">
                                    <FontIcon Glyph="&#xE8C8;" FontSize="17"/>
                                </Button>
                            </Grid>
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>

                        </StackPanel>

                        
                        <!-- Phone Number Container -->
                        <StackPanel x:Name="PhoneNumber_Container" Orientation="Vertical" Margin="0,10,0,0">
                            
                            <!-- Phone Number Header -->
                            <TextBlock Text="Phone Number"
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                       FontSize="17"
                                       Margin="20,0,0,0"
                            />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Phone Number TextBlock -->
                                <RichTextBlock x:Name="PhoneNumber_TextBlock" 
                                    Grid.Column="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Margin="20,15,0,0"
                                    Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="PhoneNumber_Text" Text="+923204540590"/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!-- Copy Phone Number Button -->
                                <Button x:Name="CopyPhoneNumber_Button"
                                        Grid.Column="1" 
                                        Margin="0,0,20,0" 
                                        VerticalAlignment="Bottom" 
                                        Width="45"
                                        Height="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="CopyPhoneNumber_Button_Click"
                                        ToolTipService.ToolTip="Copy Phone Number"
                                        ToolTipService.Placement="Top">
                                    <FontIcon Glyph="&#xE8C8;" FontSize="17"/>
                                </Button>
                            </Grid>
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>

                        </StackPanel>


                        <!-- Date Of Birth Container -->
                        <StackPanel x:Name="DOB_Container" Orientation="Vertical" Margin="0,10,0,0">

                            <!-- Date of Birth Header -->
                            <TextBlock Text="Date of Birth" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                       FontSize="17" 
                                       Margin="20,0,0,0"
                            />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Date of Birth TextBlock -->
                                <RichTextBlock x:Name="DOB_TextBlock" 
                                       Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="20,15,0,0"
                                       Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="DOB_Text" Text="14-08-2000"/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>
                            </Grid>
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>

                        </StackPanel>


                        <!-- Notes Container -->
                        <StackPanel x:Name="Notes_Container" Orientation="Vertical" Margin="0,10,0,0">

                            <!-- Notes Header -->
                            <TextBlock Text="Notes" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                       FontSize="17" 
                                       Margin="20,0,0,0"
                            />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Notes TextBlock -->
                                <RichTextBlock x:Name="Notes_TextBlock" 
                                       Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="Bold"
