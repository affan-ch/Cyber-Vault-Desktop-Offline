<Page
    x:Class="Cyber_Vault.Views.AccountsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left Sidebar  -->
        <Grid Grid.Column="0" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Header  -->
                    <Grid Grid.Row="0">
                        <Grid HorizontalAlignment="Left">
                            <TextBlock
                                Margin="0,3,0,0"
                                FontSize="21"
                                Style="{ThemeResource TitleTextBlockStyle}"
                                Text="Accounts" />
                        </Grid>

                        <StackPanel
                            Margin="0,0,15,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                            <!--  Show Favorite Accounts Button  -->
                            <Button
                                x:Name="ShowFavoriteAccounts_Button"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="ShowFavoriteAccounts_Button_Click"
                                ToolTipService.Placement="Bottom"
                                ToolTipService.ToolTip="Show Favorite Accounts">
                                <FontIcon FontSize="17" Glyph="&#xE734;" />
                            </Button>

                            <!--  Show Folders Button  -->
                            <Button
                                x:Name="ShowFolders_Button"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="ShowFolders_Button_Click"
                                ToolTipService.Placement="Bottom"
                                ToolTipService.ToolTip="Folders">
                                <FontIcon FontSize="17" Glyph="&#xE8B7;" />
                            </Button>

                            <!--  Filter Button  -->
                            <Button
                                x:Name="Filter_Button"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                ToolTipService.Placement="Bottom"
                                ToolTipService.ToolTip="Filter Accounts">

                                <Button.Content>
                                    <FontIcon FontSize="17" Glyph="&#xE71C;" />
                                </Button.Content>

                                <Button.Flyout>
                                    <MenuFlyout>
                                        <!--  Account Type  -->
                                        <MenuFlyoutSubItem Text="Account Type">
                                            <MenuFlyoutSubItem.Icon>
                                                <FontIcon Glyph="&#xE774;" />
                                            </MenuFlyoutSubItem.Icon>

                                            <!--  Google Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="Google_Filter"
                                                Click="Google_Filter_Click"
                                                Text="Google">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="G" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <!--  Microsoft Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="Microsoft_Filter"
                                                Click="Microsoft_Filter_Click"
                                                Text="Microsoft">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="M" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <!--  Facebook Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="Facebook_Filter"
                                                Click="Facebook_Filter_Click"
                                                Text="Facebook">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="F" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <!--  Instagram Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="Instagram_Filter"
                                                Click="Instagram_Filter_Click"
                                                Text="Instagram">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="R" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <!--  Twitter Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="Twitter_Filter"
                                                Click="Twitter_Filter_Click"
                                                Text="Twitter">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="T" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <!--  Snapchat Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="Snapchat_Filter"
                                                Click="Snapchat_Filter_Click"
                                                Text="Snapchat">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="S" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <!--  LinkedIn Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="LinkedIn_Filter"
                                                Click="LinkedIn_Filter_Click"
                                                Text="LinkedIn">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="L" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator />

                                            <!--  Custom Filter  -->
                                            <MenuFlyoutItem
                                                x:Name="Custom_Filter"
                                                Click="Custom_Filter_Click"
                                                Text="Custom">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="U" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>
                                        </MenuFlyoutSubItem>

                                        <!--  Date Added  -->
                                        <MenuFlyoutSubItem Text="Date Added">
                                            <MenuFlyoutSubItem.Icon>
                                                <FontIcon Glyph="&#xED0E;" />
                                            </MenuFlyoutSubItem.Icon>

                                            <!--  Newest First (Date Added)  -->
                                            <MenuFlyoutItem
                                                x:Name="Newest_DateAdded_Filter"
                                                Click="Newest_DateAdded_Filter_Click"
                                                Text="Newest First">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="N" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutSeparator />

                                            <!--  Oldest First (Date Added)  -->
                                            <MenuFlyoutItem
                                                x:Name="Oldest_DateAdded_Filter"
                                                Click="Oldest_DateAdded_Filter_Click"
                                                Text="Oldest First">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="O" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>
                                        </MenuFlyoutSubItem>

                                        <!--  Date Modified  -->
                                        <MenuFlyoutSubItem Text="Date Modified">
                                            <MenuFlyoutSubItem.Icon>
                                                <FontIcon Glyph="&#xEC92;" />
                                            </MenuFlyoutSubItem.Icon>

                                            <!--  Newest First (Date Modified)  -->
                                            <MenuFlyoutItem
                                                x:Name="Newest_DateModified_Filter"
                                                Click="Newest_DateModified_Filter_Click"
                                                Text="Newest First">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="K" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutSeparator />

                                            <!--  Oldest First (Date Modified)  -->
                                            <MenuFlyoutItem
                                                x:Name="Oldest_DateModified_Filter"
                                                Click="Oldest_DateModified_Filter_Click"
                                                Text="Oldest First">
                                                <MenuFlyoutItem.KeyboardAccelerators>
                                                    <KeyboardAccelerator Key="E" Modifiers="Control" />
                                                </MenuFlyoutItem.KeyboardAccelerators>
                                            </MenuFlyoutItem>
                                        </MenuFlyoutSubItem>

                                        <!--  Authenticator  -->
                                        <MenuFlyoutItem
                                            x:Name="Authenticator_Filter"
                                            Click="Authenticator_Filter_Click"
                                            Text="Authenticator">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8D7;" />
                                            </MenuFlyoutItem.Icon>
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="P" Modifiers="Control" />
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>

                                        <!--  Recycle Bin  -->
                                        <MenuFlyoutItem
                                            x:Name="RecycleBin_Filter"
                                            Click="RecycleBin_Filter_Click"
                                            Text="Recycle Bin">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE74D;" />
                                            </MenuFlyoutItem.Icon>
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="B" Modifiers="Control" />
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutSeparator />

                                        <!--  Clear Filter  -->
                                        <MenuFlyoutItem
                                            x:Name="Clear_Filter"
                                            Click="Clear_Filter_Click"
                                            Text="Clear Filter">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xECC9;" />
                                            </MenuFlyoutItem.Icon>
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="D" Modifiers="Control" />
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>

                            <!--  Add Account Button  -->
                            <Button
                                x:Name="AddAccount_Button"
                                Height="40"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="AddAccount_Button_Click"
                                ToolTipService.Placement="Bottom"
                                ToolTipService.ToolTip="Add Account">
                                <FontIcon FontSize="18" Glyph="&#xF164;" />
                            </Button>

                        </StackPanel>
                    </Grid>

                    <!--  Search Bar  -->
                    <AutoSuggestBox
                        x:Name="SearchBar"
                        Grid.Row="1"
                        Margin="0,20,20,0"
                        KeyUp="SearchBar_KeyDown"
                        PlaceholderText="Search Accounts"
                        QueryIcon="Find" />

                    <!--  Accounts ListView  -->
                    <ScrollViewer
                        x:Name="Accounts_ScrollViewer"
                        Grid.Row="2"
                        Width="320"
                        Margin="0,20,0,10"
                        Visibility="Collapsed">
                        <StackPanel x:Name="AccountsListView" Orientation="Vertical">
                            <!--  Item to be Added Dynamically by C# Code  -->
                        </StackPanel>
                    </ScrollViewer>

                    <Grid
                        x:Name="NoAccounts_Grid"
                        Grid.Row="2"
                        Width="290"
                        HorizontalAlignment="Left">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="19"
                            Style="{ThemeResource BodyStrongTextBlockStyle}"
                            Text="No Accounts !" />

                    </Grid>

                </Grid>
                <Border
                    Margin="0,0,0,10"
                    BorderBrush="#1D1D1D"
                    BorderThickness="0,0,1,0" />
            </Grid>

        </Grid>


        <!--  Right Content (Add Account)  -->
        <Grid
            x:Name="AddAccountContainer_Grid"
            Grid.Column="1"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Right First  -->
            <Grid Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,3">
                        <TextBlock
                            x:Name="AddAccountTitle_TextBlock"
                            Margin="20,15,0,20"
                            FontSize="20"
                            Style="{ThemeResource BodyStrongTextBlockStyle}"
                            Text="Add New Account" />

                    </Grid>
                    <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" />

                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <TextBlock
                                    Margin="20,10,0,15"
                                    FontSize="17"
                                    Style="{ThemeResource BodyStrongTextBlockStyle}"
                                    Text="Account Type" />
                            </Grid>
                            <!--  Account Type  -->
                            <ComboBox
                                x:Name="AccountType_ComboBox"
                                Margin="20,0,0,0"
                                PlaceholderText="Pick an Account Type"
                                SelectedIndex="7"
                                SelectionChanged="ComboBox_SelectionChanged">
                                <x:String>Google</x:String>
                                <x:String>Microsoft</x:String>
                                <x:String>Facebook</x:String>
                                <x:String>Instagram</x:String>
                                <x:String>Twitter</x:String>
                                <x:String>Snapchat</x:String>
                                <x:String>LinkedIn</x:String>
                                <x:String>Custom</x:String>

                                <ComboBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Margin="0,0,4,0" Text="Select Account Type" />
                                        <FontIcon FontSize="13" Glyph="&#xE735;" />
                                    </StackPanel>
                                </ComboBox.Header>
                            </ComboBox>


                            <Border
                                Margin="0,20,0,0"
                                BorderBrush="#1D1D1D"
                                BorderThickness="0,0,0,1" />

                        </StackPanel>

                    </Grid>

                    <ScrollViewer Grid.Row="2">

                        <ScrollViewer Margin="0,0,2,30">
                            <StackPanel Orientation="Vertical">
                                <Grid>
                                    <TextBlock
                                        Margin="20,10,0,15"
                                        FontSize="17"
                                        Style="{ThemeResource BodyStrongTextBlockStyle}"
                                        Text="Account Info" />
                                </Grid>
                                <!--  Title  -->
                                <TextBox
                                    x:Name="Title_TextBox"
                                    Margin="20,0,20,0"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="Twitter">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Enter Title" />
                                            <FontIcon FontSize="13" Glyph="&#xE735;" />
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>


                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Domain  -->
                                    <TextBox
                                        x:Name="Domain_TextBox"
                                        Grid.Column="0"
                                        Margin="20,20,10,10"
                                        IsSpellCheckEnabled="False"
                                        PlaceholderText="twitter.com">
                                        <TextBox.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="0,0,4,0" Text="Enter Domain" />
                                                <FontIcon FontSize="13" Glyph="&#xE735;" />
                                            </StackPanel>
                                        </TextBox.Header>
                                    </TextBox>

                                    <!--  Select Thumbnail Button  -->
                                    <Button
                                        x:Name="SelectThumbnail_Button"
                                        Grid.Column="1"
                                        Margin="0,0,20,10"
                                        VerticalAlignment="Bottom"
                                        Click="SelectThumbnail_Button_Click"
                                        ToolTipService.Placement="Top"
                                        ToolTipService.ToolTip="Select Account Thumbnail">
                                        <FontIcon Glyph="&#xE8A7;" />
                                    </Button>

                                </Grid>



                                <!--  Name  -->
                                <TextBox
                                    x:Name="Name_TextBox"
                                    Margin="20,10,20,0"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="Affan Ch.">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Enter Name" />
                                            <FontIcon FontSize="13" Glyph="&#xE734;" />
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!--  Email  -->
                                <TextBox
                                    x:Name="Email_TextBox"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="affan@twitter.com">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Enter Email" />
                                            <FontIcon FontSize="13" Glyph="&#xF0E7;" />
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!--  Username  -->
                                <TextBox
                                    x:Name="Username_TextBox"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="affan798">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Enter Username" />
                                            <FontIcon FontSize="13" Glyph="&#xF0E7;" />
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!--  Phone Number  -->
                                <TextBox
                                    x:Name="PhoneNumber_TextBox"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="+923205404030">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Enter Phone Number" />
                                            <FontIcon FontSize="13" Glyph="&#xF0E7;" />
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!--  Password  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Password TextBox  -->
                                    <PasswordBox
                                        x:Name="Password_TextBox"
                                        Grid.Column="0"
                                        Margin="20,20,10,0"
                                        PlaceholderText="pass123$">
                                        <PasswordBox.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="0,0,4,0" Text="Enter Password" />
                                                <FontIcon FontSize="13" Glyph="&#xF0E8;" />
                                            </StackPanel>
                                        </PasswordBox.Header>
                                    </PasswordBox>

                                    <!--  Generate Password Button  -->
                                    <Button
                                        x:Name="GeneratePassword_Button"
                                        Grid.Column="1"
                                        Margin="0,0,20,0"
                                        VerticalAlignment="Bottom"
                                        Click="GeneratePassword_Button_Click"
                                        ToolTipService.Placement="Top"
                                        ToolTipService.ToolTip="Generate Password">
                                        <FontIcon Glyph="&#xE8A7;" />
                                    </Button>
                                </Grid>

                                <!--  Pin  -->
                                <PasswordBox
                                    x:Name="Pin_TextBox"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}"
                                    PlaceholderText="79860">
                                    <PasswordBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Enter Pin" />
                                            <FontIcon FontSize="13" Glyph="&#xF0E8;" />
                                        </StackPanel>
                                    </PasswordBox.Header>
                                </PasswordBox>

                                <!--  Date Of Birth  -->
                                <TextBox
                                    x:Name="DateOfBirth_TextBox"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="10-06-2005">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Enter Date Of Birth" />
                                            <FontIcon FontSize="13" Glyph="&#xE734;" />
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!--  Notes  -->
                                <TextBox
                                    x:Name="Notes_TextBox"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}"
                                    AcceptsReturn="True"
                                    AutomationProperties.Name="multi-line TextBox"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="Google Photos Backup"
                                    TextWrapping="Wrap">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,4,0" Text="Notes" />
                                            <FontIcon FontSize="13" Glyph="&#xE734;" />
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!--  Tags Container  -->

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />

                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Tag1  -->
                                    <TextBox
                                        Grid.Column="0"
                                        Margin="20,20,10,0"
                                        PlaceholderText="#Tag1">
                                        <TextBox.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="0,0,4,0" Text="Tags" />
                                                <FontIcon FontSize="13" Glyph="&#xE734;" />
                                            </StackPanel>
                                        </TextBox.Header>
                                    </TextBox>

                                    <!--  Tag2  -->
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="0,0,20,0"
                                        VerticalAlignment="Bottom"
                                        PlaceholderText="#Tag2" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />

                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Tag3  -->
                                    <TextBox
                                        Grid.Column="0"
                                        Margin="20,20,10,0"
                                        PlaceholderText="#Tag3" />

                                    <!--  Tag4  -->
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="0,0,20,0"
                                        VerticalAlignment="Bottom"
                                        PlaceholderText="#Tag4" />
                                </Grid>

                                <Border
                                    Margin="0,30,0,0"
                                    BorderBrush="#1D1D1D"
                                    BorderThickness="0,0,0,1" />

                                <!--  Custom Fields Grid  -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="20,10,0,0"
                                        FontSize="17"
                                        Style="{ThemeResource BodyStrongTextBlockStyle}"
                                        Text="Custom Fields" />

                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <!--  Remove Custom Field Button  -->
                                        <Button
                                            x:Name="RemoveCustomField_Button"
                                            Width="40"
                                            Height="30"
                                            Margin="0,0,3,0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="RemoveCustomField_Button_Click"
                                            Visibility="Collapsed">
                                            <FontIcon FontSize="17" Glyph="&#xECC9;" />
                                        </Button>

                                        <!--  Add Custom Field Button  -->
                                        <Button
                                            x:Name="AddCustomField_Button"
                                            Width="40"
                                            Height="30"
                                            Margin="0,0,12,0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="AddCustomField_Button_Click"
                                            ToolTipService.ToolTip="Add Custom Field">
                                            <FontIcon FontSize="17" Glyph="&#xECC8;" />
                                        </Button>

                                    </StackPanel>

                                </Grid>



                                <StackPanel x:Name="CustomFields_StackPanel" Orientation="Vertical">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox
                                            x:Name="CustomFieldTitle1_TextBox"
                                            Grid.Column="0"
                                            Margin="20,15,0,0"
                                            IsSpellCheckEnabled="False"
                                            PlaceholderText="Account Creation Date">
                                            <TextBox.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Margin="0,0,4,0" Text="Field Title" />
                                                    <FontIcon FontSize="13" Glyph="&#xE734;" />
                                                </StackPanel>
                                            </TextBox.Header>
                                        </TextBox>

                                        <TextBox
                                            x:Name="CustomFieldValue1_TextBox"
                                            Grid.Column="1"
                                            Margin="20,10,20,0"
                                            IsSpellCheckEnabled="False"
                                            PlaceholderText="2023-01-15">
                                            <TextBox.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Margin="0,0,4,0" Text="Field Value" />
                                                    <FontIcon FontSize="13" Glyph="&#xE734;" />
                                                </StackPanel>
                                            </TextBox.Header>
                                        </TextBox>
                                    </Grid>


                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </ScrollViewer>
                </Grid>

                <Border
                    Margin="0,65,0,10"
                    BorderBrush="#1D1D1D"
                    BorderThickness="0,0,1,0" />
            </Grid>


            <!--  Right Second  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel
                        Height="50"
                        Margin="0,0,0,14"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">

                        <!--  Save Button  -->
                        <Button
                            x:Name="Save_Button"
                            Width="73"
                            Click="Save_Button_Click"
                            Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon FontSize="17" Glyph="&#xE74E;" />
                                <TextBlock
                                    Margin="4,0,0,0"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Text="Save" />
                            </StackPanel>
                        </Button>

                        <!--  Update Button  -->
                        <Button
