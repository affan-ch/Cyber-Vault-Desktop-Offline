<Page
    x:Class="Cyber_Vault.Views.AccountsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<StackPanel Orientation="Horizontal">
        <Grid Width="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Other rows as needed -->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
				<StackPanel Orientation="Vertical">
                    <!-- Header -->
					<Grid>
						<Grid HorizontalAlignment="Left">
							<TextBlock Text="Accounts" Style="{ThemeResource TitleTextBlockStyle}" />
						</Grid>

						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 15 0">
							<Button Background="Transparent" BorderThickness="0" Height="40">
                                <FontIcon Glyph="&#xE71C;" FontSize="17"/>
                            </Button>

                            <Button Background="Transparent" BorderThickness="0" Height="40" >
                                <FontIcon Glyph="&#xF164;" FontSize="19" />
                            </Button>

                        </StackPanel>
					</Grid>
                    
                    <!-- Search Bar -->
					<AutoSuggestBox PlaceholderText="Search Accounts" QueryIcon="Find" Margin="0,20,20,0"/>

					<!-- Accounts ListView -->
                    <ScrollViewer Width="400" Margin="0,20,0,10">
                        <StackPanel x:Name="AccountsListView"  Orientation="Vertical">
                           <!-- Item to be Added Dynamically by C# Code -->
                        </StackPanel>
                    </ScrollViewer>

                </StackPanel>
				<Border BorderBrush="#1D1D1D" BorderThickness="0,0,1,0" Margin="0,0,0,10"/>
			</Grid>

		</Grid>

		<ScrollViewer>
			<StackPanel Orientation="Vertical">
				<TextBlock Text="" />
			</StackPanel>
		</ScrollViewer>
	</StackPanel>
</Page>
