                                    ToolTipService.ToolTip="Move to Recycle Bin">
                                    <FontIcon FontSize="17" Glyph="&#xE74D;" />
                                </Button>

                                <Button
                                    x:Name="Favorite_Button"
                                    Width="45"
                                    Margin="0,0,10,0"
                                    ToolTipService.Placement="Bottom"
                                    ToolTipService.ToolTip="Add to Favorites">
                                    <FontIcon FontSize="17" Glyph="&#xE734;" />
                                </Button>

                                <!--  Modify Button  -->
                                <Button
                                    x:Name="Modify_Button"
                                    Width="95"
                                    Click="Modify_Button_Click"
                                    Style="{StaticResource AccentButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon FontSize="17" Glyph="&#xE70F;" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="Modify" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <Border
                                Margin="0,20,0,0"
                                BorderBrush="#1D1D1D"
                                BorderThickness="0,0,0,1" />
                        </Grid>

                        <!--  Recovery Email Container  -->
                        <StackPanel
                            x:Name="RecoveryEmail_Container"
                            Margin="0,10,0,0"
                            Orientation="Vertical">
                            <!--  Recovery Email Header  -->
                            <TextBlock
                                Margin="20,0,0,0"
                                FontSize="17"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Text="Recovery Email" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Recovery Email TextBlock  -->
                                <RichTextBlock
                                    x:Name="RecoveryEmail_TextBlock"
                                    Grid.Column="0"
                                    Margin="20,15,0,0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Opacity="0.9">
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="RecoveryEmail_Text" Text="affan@gmail.com" />
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!--  Copy Recovery Email Button  -->
                                <Button
                                    x:Name="CopyRecoveryEmail_Button"
                                    Grid.Column="1"
                                    Width="45"
                                    Height="35"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CopyRecoveryEmail_Button_Click"
                                    ToolTipService.Placement="Top"
                                    ToolTipService.ToolTip="Copy Recovery Email">
                                    <FontIcon FontSize="17" Glyph="&#xE8C8;" />
                                </Button>
                            </Grid>
                            <Border
                                Margin="0,20,0,0"
                                BorderBrush="#1D1D1D"
                                BorderThickness="0,0,0,1" />

                        </StackPanel>


                        <!--  Recovery Phone Number Container  -->
                        <StackPanel
                            x:Name="RecoveryPhoneNumber_Container"
                            Margin="0,10,0,0"
                            Orientation="Vertical">
                            <!--  Recovery Phone Number Header  -->
                            <TextBlock
                                Margin="20,0,0,0"
                                FontSize="17"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Text="Recovery Phone Number" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Recovery Phone Number TextBlock  -->
                                <RichTextBlock
                                    x:Name="RecoveryPhoneNumber_TextBlock"
                                    Grid.Column="0"
                                    Margin="20,15,0,0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Opacity="0.9">
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="RecoveryPhoneNumber_Text" Text="+923090090540" />
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!--  Copy Recovery Phone Number Button  -->
                                <Button
                                    x:Name="CopyRecoveryPhoneNumber_Button"
                                    Grid.Column="1"
                                    Width="45"
                                    Height="35"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CopyRecoveryPhoneNumber_Button_Click"
                                    ToolTipService.Placement="Top"
                                    ToolTipService.ToolTip="Copy Recovery Phone Number">
                                    <FontIcon FontSize="17" Glyph="&#xE8C8;" />
                                </Button>
                            </Grid>
                            <Border
                                Margin="0,20,0,0"
                                BorderBrush="#1D1D1D"
                                BorderThickness="0,0,0,1" />

                        </StackPanel>


                        <!--  Authenticator Container  -->
                        <StackPanel
                            x:Name="Authenticator_Container"
                            Margin="0,10,0,0"
                            Orientation="Vertical">
                            <!--  Authenticator Header  -->
                            <TextBlock
                                Margin="20,0,0,0"
                                FontSize="17"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Text="Authenticator" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  AuthenticatorTextBlock  -->
                                <RichTextBlock
                                    x:Name="Authenticator_TextBlock"
                                    Grid.Column="0"
                                    Margin="20,15,0,0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Opacity="0.9">
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="Authenticator_Text" Text="0123456" />
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <ProgressRing
                                    x:Name="OTP_Ring"
                                    Grid.Column="1"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,12,0"
                                    Background="Transparent"
                                    IsIndeterminate="False"
                                    Value="100" />

                                <!--  HOTP Generate Button  -->
                                <Button
                                    x:Name="HOTP_Generate_Button"
                                    Grid.Column="1"
                                    Width="45"
                                    Height="35"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="HOTP_Generate_Button_Click"
                                    ToolTipService.Placement="Top"
                                    ToolTipService.ToolTip="Refresh OTP"
                                    Visibility="Collapsed">
                                    <FontIcon FontSize="17" Glyph="&#xE72C;" />
                                </Button>

                                <!--  Authenticator QR Button  -->
                                <Button
                                    x:Name="AuthenticatorQR_Button"
                                    Grid.Column="2"
                                    Width="45"
                                    Height="35"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="AuthenticatorQR_Button_Click"
                                    ToolTipService.Placement="Top"
                                    ToolTipService.ToolTip="QR Code">
                                    <FontIcon FontSize="17" Glyph="&#xED14;" />
                                </Button>

                                <!--  Copy OTP Button  -->
                                <Button
                                    x:Name="CopyOTP_Button"
                                    Grid.Column="3"
                                    Width="45"
                                    Height="35"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CopyOTP_Button_Click"
                                    ToolTipService.Placement="Top"
                                    ToolTipService.ToolTip="Copy OTP">
                                    <FontIcon FontSize="17" Glyph="&#xE8C8;" />
                                </Button>
                            </Grid>
                            <Border
                                Margin="0,20,0,0"
                                BorderBrush="#1D1D1D"
                                BorderThickness="0,0,0,1" />

                        </StackPanel>

                        <!--  Backup Codes Container  -->
                        <StackPanel
                            x:Name="BackupCodes_Container"
                            Margin="0,10,0,0"
                            Orientation="Vertical">
                            <!--  Backup Codes Header  -->
                            <TextBlock
                                Margin="20,0,0,0"
                                FontSize="17"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Text="Backup Codes" />

                            <StackPanel
                                x:Name="BackupCodes_Grids"
                                Margin="20,0,0,0"
                                Orientation="Vertical">
