<Page
    x:Class="Cyber_Vault.Views.AccountsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Grid 
            Width="320"
            Grid.Column="0"
        >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Grid Grid.Row="0">
						<Grid HorizontalAlignment="Left">
							<TextBlock Text="Accounts" Style="{ThemeResource TitleTextBlockStyle}" />
						</Grid>

						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 15 0">
							<!-- Filter Button -->
                            <Button x:Name="Filter_Button" Background="Transparent" BorderThickness="0" Height="40">
                               
                                <Button.Content>
                                    <FontIcon Glyph="&#xE71C;" FontSize="17"/>
                                </Button.Content>
                                
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="All">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="U" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem Text="Google">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="G" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="Microsoft">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="M" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="Facebook">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="K" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="Instagram">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="R" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="Snapchat">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="N" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="GitHub">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="H" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem Text="Custom">
                                            <MenuFlyoutItem.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="T" Modifiers="Control"/>
                                            </MenuFlyoutItem.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>

                            <!-- Add Account Button -->
                            <Button x:Name="AddAccount_Button"
                                    Click="AddAccount_Button_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Height="40" >
                                <FontIcon Glyph="&#xF164;" FontSize="19" />
                            </Button>

                        </StackPanel>
					</Grid>
                    
                    <!-- Search Bar -->
                    <AutoSuggestBox Grid.Row="1" PlaceholderText="Search Accounts" QueryIcon="Find" Margin="0,20,20,0"/>

					<!-- Accounts ListView -->
                    <ScrollViewer x:Name="Accounts_ScrollViewer" Grid.Row="2" Width="320" Margin="0,20,0,10" Visibility="Collapsed">
                        <StackPanel x:Name="AccountsListView"  Orientation="Vertical">
                           <!-- Item to be Added Dynamically by C# Code -->
                        </StackPanel>
                    </ScrollViewer>

                    <Grid x:Name="NoAccounts_Grid" Grid.Row="2" Width="290" HorizontalAlignment="Left">
                        <TextBlock Text="No Accounts !" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Style="{ThemeResource BodyStrongTextBlockStyle}" FontSize="19"/>

                    </Grid>

                </Grid>
				<Border BorderBrush="#1D1D1D" BorderThickness="0,0,1,0" Margin="0,0,0,10"/>
			</Grid>

		</Grid>

        
        <!-- Right Content (Add Account) -->
        <Grid x:Name="AddAccountContainer_Grid" Grid.Column="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Right First -->
            <Grid Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <TextBlock Text="Account Type" Style="{ThemeResource BodyStrongTextBlockStyle}" FontSize="17" Margin="20,0,0,15"/>
                            </Grid>
                            <!-- Account Type -->
                            <ComboBox 
                                x:Name="AccountType_ComboBox" 
                                PlaceholderText="Pick an Account Type" 
                                SelectedIndex="6" 
                                Margin="20,0,0,0"
                                SelectionChanged="ComboBox_SelectionChanged">
                                <x:String>Google</x:String>
                                <x:String>Microsoft</x:String>
                                <x:String>Facebook</x:String>
                                <x:String>Instagram</x:String>
                                <x:String>Snapchat</x:String>
                                <x:String>GitHub</x:String>
                                <x:String>Custom</x:String>

                                <ComboBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Select Account Type" Margin="0,0,4,0"/>
                                        <FontIcon Glyph="&#xE735;" FontSize="13"/>
                                    </StackPanel>
                                </ComboBox.Header>
                            </ComboBox>
                            
                            
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>

                        </StackPanel>

                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <TextBlock Text="Account Info" 
                               Style="{ThemeResource BodyStrongTextBlockStyle}" 
                               FontSize="17" 
                               Margin="20,10,0,15"/>
                        </Grid>
                        <ScrollViewer Margin="0,0,2,30" Grid.Row="1">
                            <StackPanel Orientation="Vertical">

                                <!-- Title -->
                                <TextBox x:Name="Title_TextBox"
                                    PlaceholderText="Twitter" 
                                    IsSpellCheckEnabled="False"
                                    Margin="20,0,20,0" >
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Title" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xE735;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!-- Domain -->
                                <TextBox x:Name="Domain_TextBox"
                                    PlaceholderText="twitter.com" 
                                    IsSpellCheckEnabled="False"
                                    Margin="20,20,20,10">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Domain" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xE735;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!-- Name -->
                                <TextBox x:Name="Name_TextBox"
                                    PlaceholderText="Affan Ch." 
                                    IsSpellCheckEnabled="False"
                                    Margin="20,10,20,0">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Name" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!-- Email -->
                                <TextBox x:Name="Email_TextBox"
                                    PlaceholderText="affan@twitter.com"
                                    IsSpellCheckEnabled="False"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Email" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xF0E7;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!-- Username -->
                                <TextBox x:Name="Username_TextBox"
                                    PlaceholderText="affan798"
                                    IsSpellCheckEnabled="False"
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Username" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xF0E7;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!-- Phone Number -->
                                <TextBox x:Name="PhoneNumber_TextBox"
                                     PlaceholderText="+923205404030" 
                                    IsSpellCheckEnabled="False"
                                     Margin="{StaticResource AccountsPageMidTextBoxMargin}" >
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Phone Number" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xF0E7;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!-- Password -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Password TextBox -->
                                    <PasswordBox x:Name="Password_TextBox"
                                        PlaceholderText="pass123$" 
                                        Grid.Column="0"
                                        Margin="20,20,10,0" >
                                        <PasswordBox.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Enter Password" Margin="0,0,4,0"/>
                                                <FontIcon Glyph="&#xF0E8;" FontSize="13"/>
                                            </StackPanel>
                                        </PasswordBox.Header>
                                    </PasswordBox>

                                    <!-- Generate Password Button -->
                                    <Button x:Name="GeneratePassword_Button"
                                            Click="GeneratePassword_Button_Click"
                                            Grid.Column="1" 
                                            Margin="0,0,20,0" 
                                            VerticalAlignment="Bottom" 
                                            ToolTipService.ToolTip="Generate Password"
                                            ToolTipService.Placement="Top">
                                        <FontIcon Glyph="&#xE8A7;" />
                                    </Button>
                                </Grid>

                                <!-- Pin -->
                                <PasswordBox x:Name="Pin_TextBox"
                                    PlaceholderText="79860" 
                                    Margin="{StaticResource AccountsPageMidTextBoxMargin}" >
                                    <PasswordBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Pin" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xF0E8;" FontSize="13"/>
                                        </StackPanel>
                                    </PasswordBox.Header>
                                </PasswordBox>

                                <!-- Date Of Birth -->
                                <TextBox x:Name="DateOfBirth_TextBox"
                                PlaceholderText="31-12-2001" 
                                IsSpellCheckEnabled="False"
                                Margin="{StaticResource AccountsPageMidTextBoxMargin}">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Date Of Birth" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                                <!-- Notes -->
                                <TextBox x:Name="Notes_TextBox"
                                IsSpellCheckEnabled="False"
                                PlaceholderText="Google Photos Backup" 
                                Margin="{StaticResource AccountsPageMidTextBoxMargin}"
                                TextWrapping="Wrap" AcceptsReturn="True"
                                AutomationProperties.Name="multi-line TextBox">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Notes" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>

                <Border BorderBrush="#1D1D1D" BorderThickness="0,0,1,0" Margin="0,0,0,10"/>
            </Grid>

            
            <!-- Right Second -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Margin="0,0,0,20">
                        
                        <!-- Save Button -->
                        <Button x:Name="Save_Button" Style="{StaticResource AccentButtonStyle}" Width="73" Click="Save_Button_Click">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon 
                                    Glyph="&#xE74E;" 
                                    FontSize="17"/>
                                <TextBlock 
                                    Text="Save"  
                                    Margin="4,0,0,0"
                                    Style="{ThemeResource BodyTextBlockStyle}" 
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Row="1">
                    <ScrollViewer Margin="0,0,5,20">
                        <StackPanel Orientation="Vertical">
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,0,10,0"/>

                            <!-- Recovery Info -->
                            <Grid Grid.Row="0">
                               <TextBlock Text="Recovery Info" 
                               Style="{ThemeResource BodyStrongTextBlockStyle}" 
                               FontSize="17" 
                               Margin="20,10,0,15"/>
                            </Grid>
                            
                            <!-- Recovery Email -->
                            <TextBox x:Name="RecoveryEmail_TextBox"
                                IsSpellCheckEnabled="False"
                                PlaceholderText="affan@gmail.com" 
                                Margin="20,0,13,0">
                                <TextBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Enter Recovery Email" Margin="0,0,4,0"/>
                                        <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                    </StackPanel>
                                </TextBox.Header>
                            </TextBox>

                            <!-- Recovery Phone Number -->
                            <TextBox x:Name="RecoveryPhoneNumber_TextBox"
                                IsSpellCheckEnabled="False"
                                PlaceholderText="+923205404031" 
                                Margin="{StaticResource AccountsPageRightTextBoxMargin}">
                                <TextBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Enter Recovery Phone No." Margin="0,0,4,0"/>
                                        <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                    </StackPanel>
                                </TextBox.Header>
                            </TextBox>

                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,10,0"/>

                            <!-- Two Factor Authentication -->
                            <Grid Grid.Row="0">
                                <TextBlock Text="Two Factor Authentication" 
                                   Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                   FontSize="17" 
                                   Margin="20,10,0,15"/>
                            </Grid>

                            <!-- 2FA QR Code -->
                            <TextBox x:Name="QrCode_TextBox"
                                PlaceholderText="otpauth://totp/?secret=" 
                                IsSpellCheckEnabled="False"
                                Margin="20,0,13,0"
                                TextWrapping="Wrap" AcceptsReturn="True"
                                AutomationProperties.Name="multi-line TextBox">
                                <TextBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Enter 2FA QR Code Text" Margin="0,0,4,0"/>
                                        <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                    </StackPanel>
                                </TextBox.Header>
                            </TextBox>

                            <!-- 2FA Secret Key -->
                            <TextBox x:Name="SecretKey_TextBox"
                                IsSpellCheckEnabled="False"
                                PlaceholderText="mhmtfiqlvg2ve63jwk4gq2o" 
                                Margin="{StaticResource AccountsPageRightTextBoxMargin}">
                                <TextBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Enter 2FA Secret Key" Margin="0,0,4,0"/>
                                        <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                    </StackPanel>
                                </TextBox.Header>
                            </TextBox>

                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,10,0"/>

                            <!-- Backup Codes Grid -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Backup Codes"
                                           Margin="20,0,0,0"
                                           Grid.Column="0"
                                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           FontSize="17"/>

                                <StackPanel Orientation="Horizontal" Grid.Column="2">
                                    <!-- Remove Backup Code Button -->
                                    <Button x:Name="RemoveBackupCode_Button" 
                                        Click="RemoveBackupCode_Button_Click"
                                        Margin="0,0,3,0" 
                                        BorderThickness="0" 
                                        Background="Transparent" 
                                        Height="30" 
                                        Visibility="Collapsed"
                                        Width="40">
                                        <FontIcon Glyph="&#xECC9;" FontSize="17" />
                                    </Button>

                                    <!-- Add Backup Code Button -->
                                    <Button x:Name="AddBackupCode_Button" 
                                        Click="AddBackupCode_Button_Click"
                                        Margin="0,0,12,0" 
                                        BorderThickness="0" 
                                        Background="Transparent" 
                                        Height="30" 
                                        Width="40">
                                        <FontIcon Glyph="&#xECC8;" FontSize="17" />
                                    </Button>

                                </StackPanel>
                                
                            </Grid>

                            <StackPanel x:Name="BackupCodes_StackPanel" Orientation="Vertical">

                                <TextBox x:Name="BackupCode1_TextBox"
                                    IsSpellCheckEnabled="False"
                                    PlaceholderText="123987" 
                                    Margin="20,10,13,0">
                                    <TextBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Enter Backup Code" Margin="0,0,4,0"/>
                                            <FontIcon Glyph="&#xE734;" FontSize="13"/>
                                        </StackPanel>
                                    </TextBox.Header>
                                </TextBox>
                                
                            </StackPanel>


                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                
            </Grid>
        </Grid>
		
        
        <!-- Right Content (Select to View) -->
        <Grid x:Name="ErrorContainer_Grid" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                    <Image Source="/Assets/select.png" Width="288" Height="277" />
                    <TextBlock Text="Select Any Account to View Here" Style="{ThemeResource TitleTextBlockStyle}"
                               FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>


        <!-- Right Content (View Account) -->
        <Grid x:Name="ViewAccount_Grid" Grid.Column="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Right First (View Account) -->
            <Grid Grid.Column="0">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">

                        <!-- Domain Container -->
                        <StackPanel x:Name="Domain_Container" Orientation="Vertical" Margin="0,5,0,0">

                            <!-- Domain Header -->
                            <TextBlock Text="Domain"
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                       FontSize="17"
                                       Margin="20,0,0,0"
                            />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Domain TextBlock -->
                                <RichTextBlock x:Name="Domain_TextBlock" 
                                       Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="20,15,0,0"
                                       Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="Domain_Text" Text="microsoft.com"/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!-- Open Domain Link in Browser Button -->
                                <Button x:Name="OpenDomainLink_Button"
                                        Grid.Column="1" 
                                        Margin="0,0,5,0" 
                                        VerticalAlignment="Bottom" 
                                        Width="45"
                                        Height="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ToolTipService.ToolTip="Open in Browser"
                                        ToolTipService.Placement="Top"
                                        Click="OpenDomainLink_Button_Click"
                                >
                                    <FontIcon Glyph="&#xE8A7;" FontSize="17"/>
                                </Button>

                                <!-- Copy Domain Button -->
                                <Button x:Name="CopyDomain_Button"
                                    Grid.Column="2" 
                                    Margin="0,0,20,0" 
                                    VerticalAlignment="Bottom" 
                                    Width="45"
                                    Height="35"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CopyDomain_Button_Click"
                                    ToolTipService.ToolTip="Copy Domain"
                                    ToolTipService.Placement="Top">
                                    <FontIcon Glyph="&#xE8C8;" FontSize="17"/>
                                </Button>
                            </Grid>
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>
                        </StackPanel>


                        <!-- Name Container -->
                        <StackPanel x:Name="Name_Container" Orientation="Vertical" Margin="0,10,0,0">
                            
                            <!-- Name Header -->
                            <TextBlock Text="Name" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                       FontSize="17"
                                       Margin="20,0,0,0"
                            />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Name TextBlock -->
                                <RichTextBlock x:Name="Name_TextBlock" 
                                        Grid.Column="0"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Margin="20,15,0,0"
                                        Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="Name_Text" Text="Affan Ch."/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>
                            </Grid>
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>

                        </StackPanel>

                        
                        <!-- Email Container -->
                        <StackPanel x:Name="Email_Container" Orientation="Vertical" Margin="0,10,0,0">
                            <!-- Email Header -->
                            <TextBlock Text="Email" Margin="20,0,0,0" Style="{ThemeResource BodyStrongTextBlockStyle}" FontSize="17"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Email TextBlock -->
                                <RichTextBlock x:Name="Email_TextBlock" 
                                       Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="20,15,0,0"
                                       Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="Email_Text" Text="affan@microsoft.com"/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!-- Copy Email Button -->
                                <Button x:Name="CopyEmail_Button"
                                        Grid.Column="1" 
                                        Margin="0,0,20,0" 
                                        VerticalAlignment="Bottom" 
                                        Width="45"
                                        Height="35"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="CopyEmail_Button_Click"
                                        ToolTipService.ToolTip="Copy Email"
                                        ToolTipService.Placement="Top">
                                    <FontIcon Glyph="&#xE8C8;" FontSize="17"/>
                                </Button>
                            </Grid>
                            <Border BorderBrush="#1D1D1D" BorderThickness="0,0,0,1" Margin="0,20,0,0"/>

                        </StackPanel>
                        

                        <!-- Username Container -->
                        <StackPanel x:Name="Username_Container" Orientation="Vertical" Margin="0,10,0,0">
                            <!-- Username Header -->
                            <TextBlock Text="Username" Margin="20,0,0,0" Style="{ThemeResource BodyStrongTextBlockStyle}" FontSize="17"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Username TextBlock -->
                                <RichTextBlock x:Name="Username_TextBlock" 
                                       Grid.Column="0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="20,15,0,0"
                                       Opacity="0.9"
                                >
                                    <Paragraph>
                                        <Bold>
                                            <Run x:Name="Username_Text" Text="affan297"/>
                                        </Bold>
                                    </Paragraph>
                                </RichTextBlock>

                                <!-- Copy Username Button -->
                                <Button x:Name="CopyUsername_Button"
                                    Grid.Column="1" 
                                    Margin="0,0,20,0" 
                                    VerticalAlignment="Bottom" 
                                    Width="45"
                                    Height="35"
                                    Background="Transparent"
                                    BorderThickness="0"
